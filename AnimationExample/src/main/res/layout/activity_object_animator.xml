<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnimationExampleActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/translate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="translate"/>

    <Button
        android:id="@+id/scale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="scale"/>

    <Button
        android:id="@+id/rotate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="rotate"/>

    <Button
        android:id="@+id/alpha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="alpha"/>

    <Button
        android:id="@+id/set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="set"/>

    <Button
        android:id="@+id/animator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="animator"/>

    <Button
        android:id="@+id/animator_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="animator_group"/>


    <Button
        android:id="@+id/test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="test"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/animation_test"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:background="#000000"
            android:layout_gravity="center_horizontal"
            />

        <ImageView
            android:id="@+id/animation_test2"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:background="#000000"
            android:layout_gravity="center_horizontal"
            android:layout_toEndOf="@id/animation_test"
            android:layout_marginStart="30dp"/>

        <ImageView
            android:id="@+id/animation_test3"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:background="#000000"
            android:layout_gravity="center_horizontal"
            android:layout_toEndOf="@id/animation_test2"
            android:layout_marginStart="30dp"/>

        <ImageView
            android:id="@+id/animation_test4"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:background="#000000"
            android:layout_gravity="center_horizontal"
            android:layout_toEndOf="@id/animation_test3"
            android:layout_marginStart="30dp"/>

    </RelativeLayout>

</LinearLayout>