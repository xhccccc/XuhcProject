<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_quit_bg"
    android:background="@drawable/quit_dialog_bg">

    <TextView
        android:id="@+id/tv_quit_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quit_dialog_tip_text"
        android:textSize="@dimen/quit_dialog_tip_text_size"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/quit_dialog_tip_text_margin_top"
        android:layout_marginStart="@dimen/quit_dialog_tip_text_margin_se"
        android:layout_marginEnd="@dimen/quit_dialog_tip_text_margin_se"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_quit_tip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/quit_dialog_btn_margin_top"
        android:layout_marginBottom="@dimen/quit_dialog_btn_margin_bottom">

        <Button
            android:id="@+id/quit_btn_cancel"
            android:layout_width="@dimen/quit_dialog_btn_width"
            android:layout_height="@dimen/quit_dialog_btn_height"
            android:text="@string/quit_dialog_btn_cancel"
            android:textSize="@dimen/quit_dialog_btn_text_size"
            android:textColor="@drawable/quit_dialog_text_color"
            android:background="@drawable/quit_dialog_btn_bg" />

        <Button
            android:id="@+id/quit_btn_confirm"
            android:layout_width="@dimen/quit_dialog_btn_width"
            android:layout_height="@dimen/quit_dialog_btn_height"
            android:text="@string/quit_dialog_btn_confirm"
            android:textSize="@dimen/quit_dialog_btn_text_size"
            android:textColor="#FF1E1E"
            android:background="@drawable/quit_dialog_btn_bg"
            android:layout_marginStart="@dimen/quit_dialog_btn_margin_start"/>

    </LinearLayout>
    


</RelativeLayout>