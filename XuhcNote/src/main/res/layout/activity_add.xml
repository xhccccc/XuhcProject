<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".action.AddActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_main_header_select"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/header_bg"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/cancel"
            android:layout_marginLeft="15dp"
            />

        <TextView
            android:id="@+id/tv_add_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/iv_cancel"
            android:layout_marginLeft="50dp"
            />

        <ImageView
            android:id="@+id/iv_add_delete"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/delete"
            android:layout_gravity="center"
            android:layout_toLeftOf="@id/iv_upchange"
            android:layout_marginRight="15dp"/>

        <ImageView
            android:id="@+id/iv_upchange"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/upchange"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>

    </RelativeLayout>

    <EditText
        android:id="@+id/et_note_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="@android:color/black"
        android:hint="@string/add_hint"
        android:background="@null"
        android:gravity="top"
        android:padding="20dp"
        android:textSize="20dp"
        />

</LinearLayout>