<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/control_bar_bg_width"
    android:layout_height="@dimen/control_bar_bg_height"
    android:background="@drawable/control_bar_bg"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/control_bar_content_margin_tb"
        android:layout_marginBottom="@dimen/control_bar_content_margin_tb"
        android:layout_marginStart="@dimen/control_bar_content_margin_se"
        android:layout_marginEnd="@dimen/control_bar_content_margin_se">

        <ImageView
            android:id="@+id/control_bar_back"
            android:layout_width="@dimen/control_bar_item_width"
            android:layout_height="@dimen/control_bar_item_height"
            android:background="@drawable/control_bar_back_bg"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/control_bar_kill"
            android:layout_below="@+id/control_bar_back"
            android:layout_marginTop="@dimen/control_bar_item_margin_top"
            android:layout_width="@dimen/control_bar_item_width"
            android:layout_height="@dimen/control_bar_item_height"
            android:background="@drawable/control_bar_kill_bg"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/control_bar_arrow"
            android:layout_below="@+id/control_bar_kill"
            android:layout_marginTop="@dimen/control_bar_item_margin_top"
            android:layout_width="@dimen/control_bar_item_width"
            android:layout_height="@dimen/control_bar_item_height"
            android:background="@drawable/control_bar_right_arrow_bg"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/control_bar_magnify"
            android:layout_below="@+id/control_bar_arrow"
            android:layout_marginTop="@dimen/control_bar_item_margin_top"
            android:layout_width="@dimen/control_bar_item_width"
            android:layout_height="@dimen/control_bar_item_height"
            android:background="@drawable/control_bar_magnify_bg"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/control_bar_quit"
            android:layout_below="@+id/control_bar_magnify"
            android:layout_marginTop="@dimen/control_bar_item_margin_top"
            android:layout_width="@dimen/control_bar_item_width"
            android:layout_height="@dimen/control_bar_item_height"
            android:background="@drawable/control_bar_quit_bg"
            android:clickable="true"/>


    </RelativeLayout>

</RelativeLayout>